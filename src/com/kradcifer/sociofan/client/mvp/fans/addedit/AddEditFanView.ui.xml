<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:d="urn:import:com.google.gwt.user.datepicker.client">

	<g:HTMLPanel>
		<div class="page-header">
			<h1>Editar / Adicionar</h1>
		</div>

		<div class="row-fluid">
			<form ui:field="formElement">
				<fieldset>
					<legend>
						<g:TextBox ui:field="fanName" styleName="input-xlarge" />
					</legend>

					<div class="control-group">
						<label class="control-label" for="here">Modalidade</label>
						<div class="controls">
							<g:ListBox ui:field="modalities" />
						</div>
					</div>

				</fieldset>

				<div class="span4">
					<fieldset>
						<div class="control-group">
							<label class="control-label" for="here">Nascimento</label>
							<div class="controls">
								<!-- Como usar o DatePicker: http://www.eyecon.ro/bootstrap-datepicker/ -->
								<!-- <div class="input-append date" id="dp1" data-date-format="dd-mm-yyyy"> 
									<input type="text" class="span11 datepicker" /> <span class="add-on"> <i 
									class="icon-th"></i> </span> </div> -->
								<d:DateBox ui:field="birth" />
							</div>
						</div>

						<div class="control-group">
							<label class="control-label" for="here">Sexo</label>
							<div class="controls">
								<label for="masc" class="radio inline">
									<g:RadioButton ui:field="radioMale" text="Masculino"
										name="gender" checked="true" />
								</label>
								<label for="fem" class="radio inline">
									<g:RadioButton ui:field="radioFem" text="Feminino"
										name="gender" />
								</label>
							</div>
						</div>

						<div class="control-group">
							<label class="control-label" for="here">Estado Civil</label>
							<div class="controls">
								<g:ListBox ui:field="maritalStatus" />
							</div>
						</div>

						<div class="control-group">
							<label class="control-label" for="here">Nome do Pai</label>
							<div class="controls">
								<g:TextBox ui:field="fathersName" />
							</div>
						</div>

						<div class="control-group">
							<label class="control-label" for="here">Nome da Mãe</label>
							<div class="controls">
								<g:TextBox ui:field="mothersName" />
							</div>
						</div>

						<div class="control-group">
							<label class="control-label" for="here">Identificação</label>
							<div class="controls">
								<g:TextBox ui:field="rg" styleName="span3" />
								<g:TextBox ui:field="cpf" styleName="span4" />
							</div>
						</div>

						<div class="control-group">
							<label class="control-label" for="here">Profissão</label>
							<div class="controls">
								<g:TextBox ui:field="job" />
							</div>
						</div>
					</fieldset>
				</div>



				<div class="span4">
					<fieldset>
						<div class="control-group">
							<label class="control-label" for="here">Rua</label>
							<div class="controls">
								<g:TextBox ui:field="address" />
							</div>
						</div>

						<div class="control-group">
							<label class="control-label" for="here">Complemento</label>
							<div class="controls">
								<g:TextBox ui:field="comp" />
							</div>
						</div>

						<div class="control-group">
							<label class="control-label" for="here">Bairro</label>
							<div class="controls">
								<g:TextBox ui:field="district" />
							</div>
						</div>

						<div class="control-group">
							<label class="control-label" for="here">Cidade</label>
							<div class="controls">
								<g:TextBox ui:field="city" />
							</div>
						</div>

						<div class="control-group">
							<label class="control-label" for="here">CEP</label>
							<div class="controls">
								<g:TextBox ui:field="zip" />
							</div>
						</div>
					</fieldset>
				</div>



				<div class="span4">
					<fieldset>
						<div class="control-group">
							<label class="control-label" for="here">E-mail</label>
							<div class="controls">
								<g:TextBox ui:field="email" />
							</div>
						</div>

						<div class="control-group">
							<label class="control-label" for="here">Tel. Residencial</label>
							<div class="controls">
								<g:TextBox ui:field="residencialPhone" />
							</div>
						</div>

						<div class="control-group">
							<label class="control-label" for="here">Celular</label>
							<div class="controls">
								<g:TextBox ui:field="cellular" />
							</div>
						</div>

						<div class="control-group">
							<label class="control-label" for="here">Tel. Comercial</label>
							<div class="controls">
								<g:TextBox ui:field="commercialPhone" />
							</div>
						</div>

						<div class="control-group">
							<div class="controls">
								<g:Button styleName="btn" ui:field="save" text="Salvar" />
							</div>
						</div>
					</fieldset>
				</div>
			</form>
		</div>
	</g:HTMLPanel>

</ui:UiBinder> 
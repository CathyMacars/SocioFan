<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	 xmlns:d="urn:import:com.google.gwt.user.datepicker.client">

	<g:HTMLPanel>
		<div class="page-header">
			<h1>Adicionar multa</h1>
		</div>


		<form ui:field="formElement" class="form-horizontal">
			<fieldset>
				<legend><g:Label ui:field="login" /></legend>
				<div class="control-group">
					<label class="control-label" for="value">Valor</label>
					<div class="controls">
					    <g:TextBox ui:field="value" styleName="span2" />
					</div>
				</div>
				<div class="control-group">
					<label class="control-label" for="description">Descrição</label>
					<div class="controls">
					    <g:TextArea ui:field="description" styleName="span3" />
					</div>
				</div>
				<div class="control-group">
					<label class="control-label" for="here">Data</label>
					<div class="controls">
						<!-- Como usar o DatePicker: http://www.eyecon.ro/bootstrap-datepicker/ -->
						<!-- <div class="input-append date" id="dp1" data-date-format="dd-mm-yyyy">
							<input type="text" class="span3 datepicker" />
							<span class="add-on">
								<i class="icon-th"></i>
							</span>
						</div> -->
						<d:DateBox ui:field="when" />
					</div>
				</div>
				<div class="control-group">
					<div class="controls">
					    <g:Button ui:field="apply" text="Aplicar" styleName="btn" />
					</div>
				</div>
			</fieldset>
		</form>
	</g:HTMLPanel>

</ui:UiBinder> 